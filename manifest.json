{
    "manifest_version": 3,
    "name": "SSStylish Text",
    "version": "1.0",
    "description": "Stylize highlighted text in input fields with different styles.",
    "permissions": ["activeTab", "contextMenus"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["script.js"],
            "css": ["style.css"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}
